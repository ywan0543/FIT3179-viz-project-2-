{
    "background": "#FBF7EB",
    "params": [{
        "name": "YearFilter",
        "value": 2000,
        "bind": {
            "input": "range",
            "min": 1980,
            "max": 2019,
            "step": 1
        }
    }],
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Ratio of foreign investment",

    "data": {
        "url": "https://raw.githubusercontent.com/JasonXsiu/econ-vis-vegalite/main/dataset/investment_cleaned.csv"
    },
    "transform": [{
            "filter": "datum.Year == YearFilter"
        },
        {
            "calculate": "datum.In_or_Out == 'Inflow' ? 'Inflow' : 'Outflow'",
            "as": "In_or_Out"
        }
    ],
    "encoding": {
              "y": {
            "field": "country",
            "type": "nominal",
            "title": "Country"
        },
        "x": {
            "aggregate": "sum",
            "field": "amount",
            "type": "quantitative",
            "title": "Proportion",
            "stack": "normalize"
        }
    },
   "layer": [{ "mark": "bar",
    "width": 300,
    "height": 300,
    "encoding": {
        "color": {
            "field": "In_or_Out",
            "type": "nominal",
            "scale": {
                "range": [
                    "#675193",
                    "#ca8861"
                ]
            },
            "title": "Official Flow"
        },
        "tooltip": [{
                "title": "Country",
                "field": "country",
                "type": "nominal"
            },
            {
                "title": "Type",
                "field": "In_or_Out",
                "type": "nominal"
            },
            {
                "field": "amount",
                "type": "quantitative",
                "title": "Values"
            }
        ]
    }},
{
    "mark": "text",
    "encoding": {
      "text": {"field": "amount", "type": "quantitative"},
      "color": {
        "condition": {"test": "datum['amount'] < 2", "value": "black"},
        "value": "white"
      }
    } 
}],
    "config": {
        "font": "Space Grotesk",
        "axis": {
            "labelFontSize": 13,
            "titleFontSize": 15
        },
        "title": {
            "anchor": "middle",
            "fontSize": 16,
            "font": "Segoe UI",
            "fontWeight": 600
        },
        "legend": {
            "titleFontSize": 15,
            "labelFontSize": 13,
            "orient": "none",
            "direction": "horizontal",
            "legendX": 50,
            "legendY": 350,
            "titleAnchor": "start",
            "titleOrient": "left"
        }

    }
}