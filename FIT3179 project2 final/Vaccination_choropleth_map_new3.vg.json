{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Percentage of population vaccinated",
  "background": "#F3FAF9",
  "width": "container",
  "height": 405,
  "data": {
    "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
    "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
  },
  "projection": {"type": "equirectangular"},
  "layer":[
    {
      "transform": [
        {"calculate": "'Data is not available in ' + datum.properties.NAME", "as": "note"}
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "transform": [
        {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/ywan0543/FIT3179-viz-project-2-/main/2021_10_1_Worldwide%20Vaccine%20Data.csv"
        },
        "key": "Country",
        "fields": ["% of population vaccinated"]
      }
    }
    ],
  "mark": {
    "type": "geoshape",
    "stroke": "white"
    },
  "encoding": {
    "color": {
      "field": "% of population vaccinated",
      "type": "quantitative",
      "title": "% of population vaccinated"
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "% of population vaccinated", "type": "quantitative"}
    ]
  }
  }
],
  "config": {
        "font": "Space Grotesk",
        "axis": {
            "labelFontSize": 13,
            "titleFontSize": 15
        },
        "title": {
            "anchor": "middle",
            "fontSize": 16,
            "font": "Segoe UI",
            "fontWeight": 600
        },
        "legend": {
            "titleFontSize": 11,
            "labelFontSize": 13,
            "orient": "none",
            "direction": "vertical",
            "legendX": 10,
            "legendY": 120,
            "titleAnchor": "start",
            "titleOrient": "left"
        }

    }
}
