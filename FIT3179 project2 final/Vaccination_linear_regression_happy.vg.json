{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": "390",
  "data": {
    "url": "https://ywan0543.github.io/FIT3179-viz-project-2-/enddata_2020_10_11_141.csv"
  },

  "layer": [
    {
      "selection": {
        "Regional_highlight": {
          "type": "multi",
          "fields": ["Regional"],
          "bind": "legend"}
        },
      "mark": {
        "type": "point",
        "filled": true,
        "size": 80
      },
      "encoding": {
        "x": {
          "field": "Ladder score",
          "type": "quantitative",
          "axis": {"tickCount": 12},
          "scale": { "domain": [2.0, 8.0]}
        },
        "y": {
          "field": "% of population vaccinated",
          "type": "quantitative"
        },
        "color": {
          "field": "Regional", 
          "type": "nominal",
           "scale": {
            "domain": [
              "Sub-Saharan Africa",
          "Western Europe",
          "Latin America and Caribbean",
          "Central and Eastern Europe",
          "Middle East and North Africa",
          "Commonwealth of Independent States",
          "Southeast Asia",
          "South Asia",
          "North America and ANZ",
          "East Asia"
              ],
          "range": [
            "#5980CC"]
        }
        },
        "opacity": {
          "condition": {"selection": "Regional_highlight", "value": 0.8},
          "value": 0.05
        },
        "tooltip": [
          {"field": "Country_Name", "type": "nominal"},
        {"field": "Regional", "type": "nominal"},
        {"field": "Ladder score", "type": "quantitative"},
        {"field": "% of population vaccinated", "type": "quantitative"}
        ]
      }
    },
    {
      "mark": {
        "type": "line",
        "color": "firebrick"
      },
      "transform": [
        {
          "regression": "% of population vaccinated",
          "on": "Ladder score"
        }
      ],
      "encoding": {
        "x": {
          "field": "Ladder score",
          "type": "quantitative"
        },
        "y": {
          "field": "% of population vaccinated",
          "type": "quantitative"
        }
      }
    },
    {
      "transform": [
        {
          "regression": "% of population vaccinated",
          "on": "Ladder score",
          "params": true
        },
        {"calculate": "'RÂ²: '+format(datum.rSquared, '.2f')", "as": "R2"}
      ],
      "mark": {
        "type": "text",
        "color": "firebrick",
        "x": "width",
        "align": "right",
        "y": -5
      },
      "encoding": {
        "text": {"type": "nominal", "field": "R2"}
      }
    }
  ],
  "config": {
        "font": "Space Grotesk",
        "axis": {
            "labelFontSize": 13,
            "titleFontSize": 15
        },
        "title": {
            "anchor": "middle",
            "fontSize": 16,
            "font": "Segoe UI",
            "fontWeight": 600
        },
        "legend": {
            "titleFontSize": 13,
            "labelFontSize": 10
        }

    }
}

