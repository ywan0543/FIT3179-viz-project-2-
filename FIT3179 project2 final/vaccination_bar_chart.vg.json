{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": { "url": "https://raw.githubusercontent.com/ywan0543/FIT3179-viz-project-2-/main/vaccinations_by_manufacturer.csv" },
  "width": "container",
  "height": 390,
  "mark": "bar",
  "encoding": {
    "x": {
      "timeUnit": "month",
      "field": "date",
      "type": "ordinal",
      "title": "Month of the year in 2021"
    },
    "y": {
      "field": "total_vaccinations",
      "type": "quantitative",
      "title": "Total Vaccinations",
      "axis": { "grid": false}
    },
    "tooltip": [ 
      {"field": "vaccine", "type": "nominal"},
      {"field": "total_vaccinations", "type": "quantitative", "format": ","}],

    "color": {
      "field": "vaccine",
      "type": "nominal",
      "title": "Vaccine manufacturer",
      "scale": {
        "domain": ["Johnson&Johnson", "Moderna", "Oxford/AstraZeneca", "Pfizer/BioNTech"],
        "range": ["#FFA06F", "#CCCCCC", "#99CCFF", "#5980CC"]
      }
      }
    },
    "config": {
      "font": "Space Grotesk",
      "axis": {
          "labelFontSize": 13,
          "titleFontSize": 15
      },
      "title": {
          "anchor": "middle",
          "fontSize": 16,
          "font": "Segoe UI",
          "fontWeight": 600
      },
      "legend": {
          "titleFontSize": 14,
          "labelFontSize": 12,
          "orient": "none",
          "direction": "horizontal",
          "legendX": -65,
          "legendY": 435,
          "titleAnchor": "start",
          "titleOrient": "left"
      }

  }
  }




